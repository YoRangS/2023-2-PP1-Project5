        <property name="url" value="jdbc:mariadb://walab.handong.edu:3306/p231_21900673?useSSL=false" />
        <property name="username" value="p231_21900673"/>
        <property name="password" value="nahJ7a" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" >
